<h1>Listing Food Items</h1>

<p>Date: <input type="text" id="datepicker"></p>
<script>
$(function() {
  $('#datepicker').datepicker();
});
</script>

<form class="form-horizontal">
  <div class="form-group">
    <label for="inputTitle3" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="title" class="form-control" id="inputTitle3" placeholder="Title">
    </div>
  </div>
  <div class="form-group">
    <label for="inputDescription3" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <input type="description" class="form-control" id="inputDescription3" placeholder="Description">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPrice3" class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10">
      <input type="price" class="form-control" id="inputPrice3" placeholder="Price">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Create fooditem</button>
    </div>
  </div>
</form>



<%= form_for(@fooditem, html: { class: "form-horizontal"}) do |f| %>
  <% if @fooditem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fooditem.errors.count, "error") %> prohibited this fooditem from being saved:</h2>

      <ul>
      <% @fooditem.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :calories %><br>
    <%= f.number_field :calories %>
  </div>
  <div class="field">
    <%= f.label :sugar %><br>
    <%= f.number_field :sugar %>
  </div>
  <div class="field">
    <%= f.label :sodium %><br>
    <%= f.number_field :sodium %>
  </div>
  <div class="field">
    <%= f.label :protein %><br>
    <%= f.number_field :protein %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
